<a href="/promoters_logout">Logout</a>
<h1><%=@promoter.name%>'s Home page</h1>
<h2>Email: <%=@promoter.email%></h2>
<h2>Phone: <%=@promoter.phone%></h2>
<a href="/">Home</a>
<h2>Clubs: <%@promoter.clubs.each do |club|%>
  <ul>
  <li><a href="/clubs/<%=club.id%>"><%=club.name%></a></li>
  </ul>
  <%end%>
</h2>
<h2>Followers: <%=@promoter.promoter_followers.count%>
<% if current_user && @promoter_followers.first == nil %>
<div>
<%= form_tag '/promoters/follow', method: :post do  %> 
<%= hidden_field_tag :promoter_id, params[:id] %>
                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-theme-dark">Follow</button>
                                    </div>
                                <% end %>
</div>
<% else %>

<%= form_tag "/promoters/unfollow/#{@promoter.id}", method: :delete do  %> 
                                    <div class="pull-right">
                                        <button type="submit" class="btn btn-theme-dark">Unfollow</button>
                                    </div>
                                <% end %>
<% end %>
<%@promoter.promoter_followers.each do |follower|%>
<a href="/users/<%=follower.user.id%>"><p><%=follower.user.name%></p></a>
<%end%>