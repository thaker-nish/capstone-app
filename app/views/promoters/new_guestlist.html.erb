<h1>Create a guestlist</h1>

<%= form_tag '/promoters/guestlist', method: :post do  %>
  <div class="form-group">
    <%= label_tag :club_id %>
    <%= collection_select("",:club_id, current_promoter.clubs, :id, :name, prompt: "Select one...") %>

  </div>
  <div class="form-group">
    <%= hidden_field_tag :promoter_id, current_promoter.id %>
  </div>
   <div class="form-group">
    <%= label_tag :user_email %>
    <%= text_field_tag :user_email, "", required:true %>
  </div>
  <div class="form-group">
    <%= label_tag :promotion_id %>
    <%= collection_select("",:promotion_id, Promotion.all, :id, :name, prompt: "Select one...") %>
  </div>
  <div class="form-group">
    <%= label_tag :guests %>
    <%= number_field("", :guests, in: 1..100) %>
  </div>
  <div class="form-group">
    <%= label_tag :reservation_date %>
    <%= date_select :reservation_date, :reservation_date %>
  </div>
  <%= submit_tag "Submit", class:"btn btn-primary" %>
<% end %>