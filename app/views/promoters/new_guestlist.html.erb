<h1>Create a guestlist</h1>

<%= form_tag '/promoters/guestlist', method: :post do  %>
  <div class="form-group">
    <%= label_tag :club_id %>
    <%= text_field_tag :club_id %>
  </div>
  <div class="form-group">
    <%= hidden_field_tag :promoter_id, current_promoter.id %>
  </div>
   <div class="form-group">
    <%= label_tag :user_id %>
    <%= text_field_tag :user_id %>
  </div>
  <div class="form-group">
    <%= label_tag :promotion_id %>
    <%= text_field_tag :promotion_id %>
  </div>
  <div class="form-group">
    <%= label_tag :guests %>
    <%= text_field_tag :guests %>
  </div>
  <div class="form-group">
    <%= label_tag :reservation_date %>
    <%= text_field_tag :reservation_date %>
  </div>
  <%= submit_tag "Submit", class:"btn btn-primary" %>
<% end %>