<div class="breadcrumb-wrap">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        <h4><%=current_promoter.name%></h4>
                    </div>
                </div>
            </div>
        </div><!--breadcrumbs-->
        <div class="divide80"></div>
        <div class="container">
            <div class="row">  
                <div class="col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2">
                    <div class="login-form">
                        <h3>Add Club</h3>
                        <%= form_tag '/promoters/clubs', method: :post do  %>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Club</label>
                            <%= collection_select("",:club_id, Club.all, :id, :name, prompt: "Select one...") %>
                        </div>   
                        <div class="form-group">
                             <%= hidden_field_tag :promoter_id, current_promoter.id %>
                        </div>           
                        <button type="submit" class="btn btn-theme-bg">Submit</button>
                    </form>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>